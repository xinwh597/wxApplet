/**index.wxss**/
.btn-area {
    display: flex;
    margin-bottom: 20px;
    width: 750 rpx;
}

.tab-btn {
    flex: 1;
    text-align: center;
    font-size: 0.8rem;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 128 rpx;
    height: 128 rpx;
    margin: 20 rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.usermotto {
    margin-top: 50px;
}

image, text {
    display: block;
    margin-bottom: 10px;
}

.navigator-hover {
    color: blue;
}

.other-navigator-hover {
    color: red;
}
